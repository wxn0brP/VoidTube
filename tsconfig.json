{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "paths": {
            "@@vql/*": ["./node_modules/@wxn0brp/vql/dist/*"],
            "@@db/*": ["./node_modules/@wxn0brp/db/dist/*"],
            "#*": ["./src/shared/*"],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "inlineSourceMap": true
    },
    "include": [
       "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}
