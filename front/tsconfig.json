{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "paths": {
            "#api/*": ["./src/api/*"],
            "#ui/*": ["./src/ui/*"],
            "#types/*": ["./src/types/*"],
            "#css/*": ["./src/scss/*"],
            "#utils/*": ["./src/utils/*"],

            "#mgl": ["./src/mgl"],
            "#store": ["./src/store"],
            "#utils": ["./src/utils"],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "inlineSourceMap": true,
        "types": [
            "esbuild-style-plugin"
        ]
    },
    "include": [
       "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}
