{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "node",
        "paths": {
            "#api/*": ["./src/api/*"],
            "#ui/*": ["./src/ui/*"],
            "#types/*": ["./src/types/*"],

            "#mgl": ["./src/mgl"],
            "#store": ["./src/store"],
            "#utils": ["./src/utils"],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "inlineSourceMap": true
    },
    "include": [
       "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}
