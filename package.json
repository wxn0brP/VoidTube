{
    "name": "void-tube",
    "version": "0.0.3",
    "main": "dist/app/index.js",
    "license": "MIT",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc && tsc-alias && node build.js",
        "start:server": "node dist/server/index.js",
        "start:client": "electron .",
        "electron:build": "electron-builder",
        "electron:build-win": "electron-builder build --win",
        "electron:build-linux": "electron-builder build --linux",
        "electron:publish": "electron-builder --publish always",
        "electron:publish-win": "electron-builder --publish always --win",
        "electron:publish-linux": "electron-builder --publish always --linux",
        "electron:build-zip": "electron-builder build --win zip --linux zip",
        "electron:dist": "electron-packager ."
    },
    "devDependencies": {
        "@types/node": "^22.15.18",
        "@types/node-notifier": "^8.0.5",
        "electron": "^36.2.0",
        "electron-builder": "^26.0.12",
        "sass": "^1.88.0",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "@wxn0brp/db": "^0.7.5",
        "@wxn0brp/falcon-frame": "github:wxn0brP/FalconFrame#dist",
        "@wxn0brp/vql": "^0.1.11",
        "@wxn0brp/wts-logger": "github:wxn0brP/ts-shared#dist-logger",
        "ky": "^1.8.1",
        "node-notifier": "^10.0.1"
    },
    "author": {
        "name": "wxn0brP",
        "email": "toja.filiper@gmail.com"
    },
    "homepage": "https://github.com/wxn0brP/VoidTube",
    "build": {
        "appId": "com.wxn0brp.voidtube",
        "productName": "VoidTube",
        "directories": {
            "buildResources": "public",
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "public/**/*",
            "front/dist/**/*"
        ],
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "icon": "public/favicon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "tar.gz",
                "pacman",
                "zip",
                "7z"
            ],
            "icon": "public/favicon.png",
            "category": "Application"
        },
        "publish": {
            "provider": "github",
            "owner": "wxn0brP",
            "repo": "VoidTube"
        }
    },
    "engines": {
        "node": ">=22.0.0"
    }
}
